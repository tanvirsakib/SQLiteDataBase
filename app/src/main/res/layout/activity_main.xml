<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:background="#E92E6C">

    </ImageView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:textSize="25sp"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic|bold"
        android:textColor="#C91A56">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameEditTextID"
        android:drawableLeft="@drawable/name"
        android:hint="Name"
        android:shadowColor="#EE2A6D"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#C91A56"
        android:textSize="25sp">
    </EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ageEditTextID"
        android:hint="Age"
        android:drawableLeft="@drawable/name"
        android:shadowColor="#EE2A6D"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#C91A56"
        android:textSize="25sp">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genderEditTextID"
        android:hint="Gender"
        android:drawableLeft="@drawable/name"
        android:shadowColor="#EE2A6D"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#C91A56"
        android:textSize="25sp">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idEditTextID"
        android:hint="ID"
        android:drawableLeft="@drawable/name"
        android:shadowColor="#EE2A6D"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#C91A56"
        android:textSize="25sp">
    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitButtonID"
        android:text="Submit"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/displayButtonID"
        android:textSize="20sp"
        android:text="Display  Data"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/updateButtonID"
        android:textSize="20sp"
        android:text="Update Data"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButtonID"
        android:textSize="20sp"
        android:text="Delete Data"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="10dp">
    </Button>

</LinearLayout>